#include <iostream>

int main() 
{
    float numero1, numero2;
    
    std::cout <<"Escribe el primer numero: ";
    std::cin >> numero1;
    
    std::cout <<"Escribe el segundo numero: ";
    std::cin >> numero2;
    
    float suma = numero1 + numero2;
    float resta = numero1 - numero2;
    float multiplicacion = numero1 * numero2;
    float division = numero1 / numero2;
    
    std::cout <<"La suma es: " << suma << std::ends;
    std::cout <<"La resta es: " << resta << std::ends;
    std::cout <<"La multiplicacion es: " << multiplicacion << std::ends;
    std::cout <<"La division es: " << division << std::ends;
    
    return 0;
}
